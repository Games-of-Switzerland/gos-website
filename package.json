{
  "name": "gos-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "storybook:start": "start-storybook -s ./public -p 6006"
  },
  "dependencies": {
    "@popperjs/core": "^2.5.2",
    "@tailwindcss/custom-forms": "^0.2.1",
    "@testing-library/jest-dom": "^5.7.0",
    "babel-jest": "^26.0.1",
    "classnames": "^2.2.6",
    "i18next": "^19.8.2",
    "kitsu": "^9.0.6",
    "kitsu-core": "^9.0.6",
    "next": "^9.4.0",
    "postcss-cli": "^7.1.2",
    "postcss-preset-env": "^6.7.0",
    "prop-types": "^15.7.2",
    "react": "16.13.1",
    "react-autosuggest": "^10.0.2",
    "react-dom": "16.13.1",
    "react-error-boundary": "^3.0.2",
    "react-i18next": "^11.7.3",
    "react-popper": "^2.2.3",
    "react-query": "^2.23.1",
    "react-query-devtools": "^2.5.1",
    "react-use": "^14.2.0",
    "sass": "^1.26.5",
    "tailwindcss": "^1.7.3",
    "throttle-debounce": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/addon-a11y": "^6.0.16",
    "@storybook/addon-actions": "^6.0.16",
    "@storybook/addon-backgrounds": "^6.0.16",
    "@storybook/addon-docs": "^6.0.16",
    "@storybook/addon-knobs": "^6.0.16",
    "@storybook/addon-links": "^6.0.16",
    "@storybook/react": "^6.0.22",
    "@testing-library/react": "^10.0.4",
    "@types/jest": "^25.2.2",
    "@types/node": "^13.13.5",
    "@types/react": "^16.9.35",
    "@types/react-autosuggest": "^9.3.14",
    "@types/react-dom": "^16.9.8",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "jest": "^26.0.1",
    "jest-fetch-mock": "^3.0.3",
    "postcss-inline-svg": "^4.1.0",
    "postcss-nested": "^4.2.3",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie < 11"
  ],
  "prettier": {
    "trailingComma": "es5",
    "bracketSpacing": false,
    "jsxBracketSameLine": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!**/node_modules/**"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setupTests.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.next/"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    }
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "env": {
      "test": {
        "plugins": [
          [
            "module-resolver",
            {
              "root": [
                "./"
              ],
              "alias": {
                "components": "./src/components"
              }
            }
          ]
        ]
      }
    }
  },
  "postcss": {
    "plugins": [
      "postcss-flexbugs-fixes",
      "tailwindcss",
      "postcss-inline-svg",
      "postcss-nested",
      [
        "postcss-preset-env",
        {
          "autoprefixer": {
            "flexbox": "no-2009"
          },
          "stage": 3,
          "features": {
            "custom-properties": false
          }
        }
      ]
    ]
  },
  "storybook": {
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react"
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "../**/*.stories.js",
      "../**/*.stories.jsx"
    ]
  }
}
